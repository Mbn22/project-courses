<%- include('header'); -%> 

<h2 class="text-dark"> Courses</h2>   

<div class="box-nav d-flex-justify-between">
  <a href="/courses/add_course" class="border-shadow">
    <i class="plus square outline icon"></i>
      <span class="text-gradient">New Course <i class="fa-solid fa-book"></i> </span>
  </a>

<table class="ui celled padded table">
    <thead>
      <tr><th class="single line">Name</th>
      <th>Course Code</th>
      <th>Cohort</th>
      <th>Description</th>
      
      <th></th>
    </tr></thead>
    <tbody>
      <% if (courses) {for(var i=0;i<courses.length; i++){ %>
        <tr>
          <td>
            <h3 class="ui center aligned header"><%= courses[i].name %></h3>
          </td>
          <td class="single line">
            <%= courses[i].coursecode %>
          </td>
          <td>
            <%= courses[i].cohort %>
          </td>
          <td><%= courses[i].description %></td>
          <td class="right aligned">
            <a href="/courses/update_course/<%= courses[i]._id %>" class="btn border-shadow update">
              <span class="text-gradient">
                <i class="edit icon"></i>
              </span>
          </a>
          
          <a href="#" class="btn border-shadow delete">
              <span class="text-gradient">
                <i class="trash icon"></i>
                
              </span>
          </a>
          </td>
         </tr>
         <% } } %>
    </tbody>
    <tfoot>
      <tr><th colspan="5">
        <div class="ui right floated pagination menu">
          <a class="icon item">
            <i class="left chevron icon"></i>
          </a>
          <a class="item">1</a>
          <a class="item">2</a>
          <a class="item">3</a>
          <a class="item">4</a>
          <a class="icon item">
            <i class="right chevron icon"></i>
          </a>
        </div>
      </th>
    </tr></tfoot>
  </table>


</p>
</div>
</body>
<%- include('_footer') %>